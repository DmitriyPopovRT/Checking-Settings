<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSpeakerTest"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/titleSpeakerTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/blue_300"
                android:gravity="center"
                android:text="Проверка динамиков"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleLowFrequencySignalGenerator"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Генератор сигналов низкой частоты"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/workplaceSpeakerTest25"
                app:layout_constraintEnd_toStartOf="@+id/titleWorkPlaceSpeakerTest"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleSpeakerTest" />

            <TextView
                android:id="@+id/noteLowFrequencySignalGenerator"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Примечание:"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/workplaceSpeakerTest25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/titleWorkPlaceSpeakerTest"
                app:layout_constraintTop_toTopOf="@+id/titleWorkPlaceSpeakerTest" />

            <TextView
                android:id="@+id/titleWorkPlaceSpeakerTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Номер рабочего места"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/workplaceSpeakerTest25"
                app:layout_constraintEnd_toStartOf="@+id/noteLowFrequencySignalGenerator"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/titleLowFrequencySignalGenerator"
                app:layout_constraintTop_toBottomOf="@+id/titleSpeakerTest" />

            <TextView
                android:id="@+id/workplaceSpeakerTest25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="П1-25"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/workplaceSpeakerTest26"
                app:layout_constraintStart_toEndOf="@+id/titleLowFrequencySignalGenerator"
                app:layout_constraintTop_toBottomOf="@+id/titleWorkPlaceSpeakerTest" />

            <TextView
                android:id="@+id/workplaceSpeakerTest26"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="П1-26"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/noteLowFrequencySignalGenerator"
                app:layout_constraintStart_toEndOf="@+id/workplaceSpeakerTest25"
                app:layout_constraintTop_toBottomOf="@+id/titleWorkPlaceSpeakerTest" />
            <!--  -->
            <TextView
                android:id="@+id/titleSettingSuccess"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="Настройки соответствуют ТИ"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/titleGold"
                app:layout_constraintEnd_toEndOf="@+id/titleLowFrequencySignalGenerator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleLowFrequencySignalGenerator" />
