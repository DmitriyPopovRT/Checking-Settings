            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonOk25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:backgroundTint="@color/green_100"
                android:src="@drawable/ic_ok"
                app:layout_constraintBottom_toTopOf="@+id/buttonClose25"
                app:layout_constraintEnd_toEndOf="@+id/workplaceSpeakerTest25"
                app:layout_constraintStart_toStartOf="@+id/workplaceSpeakerTest25"
                app:layout_constraintTop_toBottomOf="@+id/workplaceSpeakerTest25" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonClose25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:backgroundTint="@color/red_100"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@+id/titleSettingSuccess"
                app:layout_constraintEnd_toEndOf="@+id/buttonOk25"
                app:layout_constraintStart_toStartOf="@+id/buttonOk25"
                app:layout_constraintTop_toBottomOf="@+id/buttonOk25" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonOk26"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:backgroundTint="@color/green_100"
                android:src="@drawable/ic_ok"
                app:layout_constraintBottom_toTopOf="@+id/buttonClose26"
                app:layout_constraintEnd_toEndOf="@+id/workplaceSpeakerTest26"
                app:layout_constraintStart_toStartOf="@+id/workplaceSpeakerTest26"
                app:layout_constraintTop_toBottomOf="@+id/workplaceSpeakerTest26" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonClose26"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:backgroundTint="@color/red_100"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@+id/titleSettingSuccess"
                app:layout_constraintEnd_toEndOf="@+id/buttonOk26"
                app:layout_constraintStart_toStartOf="@+id/buttonOk26"
                app:layout_constraintTop_toBottomOf="@+id/buttonOk26" />

            <EditText
                android:id="@+id/editTextModSettingSuccess"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:paddingStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextModGold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/noteLowFrequencySignalGenerator"
                app:layout_constraintTop_toBottomOf="@+id/noteLowFrequencySignalGenerator" />

            <TextView
                android:id="@+id/titleGold"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="Наличие звукового сигнала при подключении золотого образца"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/titleLowFrequencySignalGenerator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleSettingSuccess" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonOkGold25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:backgroundTint="@color/green_100"
                android:src="@drawable/ic_ok"
                app:layout_constraintBottom_toTopOf="@+id/buttonCloseGold25"
                app:layout_constraintEnd_toEndOf="@+id/workplaceSpeakerTest25"
                app:layout_constraintStart_toStartOf="@+id/workplaceSpeakerTest25"
                app:layout_constraintTop_toBottomOf="@+id/buttonClose25" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonCloseGold25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:backgroundTint="@color/red_100"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/buttonOkGold25"
                app:layout_constraintStart_toStartOf="@+id/buttonOkGold25"
                app:layout_constraintTop_toBottomOf="@+id/buttonOkGold25" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonOkGold26"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:backgroundTint="@color/green_100"
                android:src="@drawable/ic_ok"
                app:layout_constraintBottom_toTopOf="@+id/buttonCloseGold26"
                app:layout_constraintEnd_toEndOf="@+id/workplaceSpeakerTest26"
                app:layout_constraintStart_toStartOf="@+id/workplaceSpeakerTest26"
                app:layout_constraintTop_toBottomOf="@+id/buttonClose26" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonCloseGold26"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:backgroundTint="@color/red_100"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/buttonOkGold26"
                app:layout_constraintStart_toStartOf="@+id/buttonOkGold26"
                app:layout_constraintTop_toBottomOf="@+id/buttonOkGold26" />

            <EditText
                android:id="@+id/editTextModGold"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:paddingStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/noteLowFrequencySignalGenerator"
                app:layout_constraintTop_toBottomOf="@+id/editTextModSettingSuccess" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>